div(id="main", ng-style="mainStyle('/large')", when-scrolled="loadMore()")
	div(ng-repeat="result in results | searchFilter:search:theme:category:budget:duration:sort:(count*amount('/large'))",
	 class="largeResult", ng-click="popUpResult(result.id[0])")
		div(class="largeImage") 
			image(ng-src='{{image(result.image[0])}}', width=420, height=280)
		div.largeDetails
			div.details 
				div.topHalf 
					| Educational Experience
				div.bottomHalf 
					div.location Plettenberg Bay
					div.price R{{price(result.price[0])}}
div.resultPopUp(ng-visible="visible", ng-style="activityStyle")
	div {{activity.name[0]}}
	input(type="text", datepicker="selectedDate")
	{{selectedDate}}
div#resultBackground(ng-visible="visible", ng-click="popUpResult()")