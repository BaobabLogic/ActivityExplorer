section#main(data-transition='slide')
  header(class='headBlue')
    nav(class='left box menuButton')
      a(href='#menu', data-router='aside', data-icon='menu', class='white')

    nav(class='right box searchButton')
      a(href='#', data-icon='search', class='white')

    div(class='centered title with-subtitle logo')
      span.headA A
      span.headB ctivity 
      span.headA E
      span.headB xplorer

  article#results(class='active block backBlue')
    div#searchMenu
    div#resultsView

  article#account(class='list indented backBlue')
    div
        
  article#logIn(class='list indented backBlue')
    div
        
  article#about(class='list indented backBlue')
    div
        
  article#help(class='list indented backBlue')
    div

aside#menu(class='left')
  header(data-title="Menu")
  article#sideMenu(class="list scroll active")
    ul
      li(class="active")
        a(href='#results', data-router='article')
          strong Results
      li
        a(href='#account', data-router='article')
          strong Account
      li
        a(href='#logIn', data-router='article')
          strong Log In
      li
        a(href='#', class='logout')
          strong Log Out
      li
        a(href='#about', data-router='article')
          strong About
      li
        a(href='#help', data-router='article')
          strong Help  
