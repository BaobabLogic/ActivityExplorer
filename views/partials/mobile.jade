section#main(data-transition='slide')
  header(class='headBlue')
    nav(class='left box menuButton')
      a(href='#menu', data-router='aside', data-icon='menu', class='white')

    nav(class='right box searchButton')
      a(href='#', data-icon='search', class='white')

    div(class='centered title with-subtitle logo')
      span.headA A
      span.headB ctivity 
      span.headA E
      span.headB xplorer

  article#results(class='active block backBlue')
    div#searchMenu
      div
        form
          fieldset
            input.searchText(type='text', placeholder='Exploreâ€¦')
      div.optionsDiv
        div.filtersDiv
          a.filtersButtons(class='button themesSelect', href='#')
            span.themeTitle Themes
          a.filtersButtons(class='button refineSelect', href='#')
            span.themeTitle Refine
          a.filtersButtons(class='button sortSelect', href='#')
            span.themeTitle Sort

          div(ng-visible='themesSelectVis') 
            div#themeLeft
              div(ng-repeat="theme in themes.left")
                div.themesText 
                  span {{theme.name}}
                  span.checkbox 
                    a.checkboxSize(class='button', href='#')
            div#themeRight  
              div(ng-repeat="theme in themes.right")
                div.themesText
                  span {{theme.name}}
                  span.checkbox 
                    a.checkboxSize(class='button', href='#')

          div(ng-visible='refineSelectVis')
            div.refineDivs
              div
                span.refineTitle Budget:
                span.refineExtra R5000 or more
              div.sliderDiv
                input(class='slider', type='range', min='1', max='10', value='10', id="budgetS", slider="budget")
            div.refineDivs
              div
                span.refineTitle Time:
                span.refineExtra 3 days or more
              div.sliderDiv
                input(class='slider', type='range', min='1', max='10', value='10', id="durationS", slider="duration")

          div(ng-visible='sortSelectVis') 
            div.sortText
              p.sortSpace
              | Random
              p.sortSpace
              | Price Low
              p.sortSpace
              | Price High
              p.sortSpace
              | Time Short
              p.sortSpace
              | Time Long

    div.loadingMargin(ng-visible='loadingResults')
      div(data-loading='white')
    div#resultsView(ng-visible='!loadingResults', class='scroll')
      div.result(ng-repeat='result in results | searchFilter:search:themes:budget:duration:sort:30.', id='{{result.id[0]}}')
        div.resultImageDiv
          img(ng-src='{{image(result.image[0])}}', class='resultImage')
        div.resultDetails
          span.topLeft {{result.service_category[0]}}
          span.topRight R{{price(result.price[0])}}
        div.resultDetailsMore
          span.bottomLeft {{result.location[0]}}
          span.bottomRight {{getDuration(result.duration[0])}} hrs

  article#account(class='list indented backBlue')
    div
        
  article#logIn(class='list indented backBlue')
    div
        
  article#about(class='list indented backBlue')
    div
        
  article#help(class='list indented backBlue')
    div

section#activity(data-transition='slide')
  header(class='headBlue')
    nav(class='left box activityBack')
      a(href='#', data-router='section', data-icon='left')

    div(class='centered title with-subtitle logo')
      span.headA A
      span.headB ctivity 
      span.headA E
      span.headB xplorer

  article#activityMore(class='active block backBlue scroll')
    div.loadingMargin(ng-visible='loadingActivity')
      div(data-loading='white')
    div(ng-visible='!loadingActivity')
      div#images(class='scroll horizontal')
        span.image(ng-repeat='image in activity.images[0].image')
            img(ng-src='{{image.medium[0]}}', class='activityImage')
      div.resultDetails
        span.topLeft {{activity.name[0]}}
        span.topRight R{{price(activity.price[0])}}
      div.resultDetailsMore
        span.bottomLeft {{activity.location[0]}}
        span.bottomRight {{getDuration(activity.duration[0])}} hrs
      div#moreButtons
        a.moreButtonsActual(class='button detailsSelect', href='#')
          span.moreTitle Details
        a.moreButtonsActual(class='button bookSelect', href='#')
          span.moreTitle Book
        a.moreButtonsActual(class='button reviewsSelect', href='#')
          span.moreTitle Reviews
      div#more(ng-visible='detailsSelectVis')
        p.detailTitle Description:  
        p {{activity.description[0]}} 
        p.detailTitle Notes:  
        p {{activity.instructions[0]}} 
        p.detailTitle Where:  
        p {{activity.where[0]}} 
        p.detailTitle When:   
        p {{activity.when[0]}} 
        p.detailTitle Weather:  
        p {{activity.weather[0]}} 
        p.detailTitle What to Wear:  
        p {{activity.wear[0]}} 
        p.detailTitle Things to bring:
        p {{activity.bring[0]}}
        p.detailTitle Guest/Spectators:  
        p {{activity.guests[0]}}  
        p.detailTitle Inclusions:  
        p {{activity.inclusions[0]}} 
        p.detailTitle Exclusions:  
        p {{activity.exclusions[0]}} 
        p.detailTitle Requirements:  
        p Minimum Age: {{activity.min_age[0]}}, Maximum Weight: {{activity.max_weight[0]}}, 
        p Minimum Height: {{activity.min_height[0]}}, Maximum Height: {{activity.max_height[0]}},
        p Fitness: {{activity.fitness[0]}}, Qualifications: {{activity.qualifications[0]}}, 
        p Certification: {{activity.certification[0]}}, Experience Level: {{activity.experience_level[0]}}

      div(ng-visible='bookSelectVis')
        | Book

      div(ng-visible='reviewsSelectVis')
        | Reviews


aside#menu(class='left')
  header(data-title="Menu")
  article#sideMenu(class="list scroll active")
    ul
      li(class="active")
        a(href='#results', data-router='article')
          strong Results
          div(data-icon='picture', class='iconRight')
      li
        a(href='#account', data-router='article')
          strong Account
          div(data-icon='user', class='iconRight')
      li
        a(href='#logIn', data-router='article')
          strong Log In
          div(data-icon='plus', class='iconRight')
      li
        a(href='#', class='logout', data-action='normal', data-router='article')
          strong Log Out
          div(data-icon='minus', class='iconRight')
      li
        a(href='#about', data-router='article')
          strong About
          div(data-icon='info', class='iconRight')
      li
        a(href='#help', data-router='article')
          strong Help 
          div(data-icon='help', class='iconRight') 
