div(id="main", ng-style="mainStyle('/medium')", when-scrolled="loadMore()")
	div(ng-repeat="result in results | searchFilter:search:theme:category:budget:duration:sort:(count*amount('/medium'))",
	 class="mediumResult", ng-click="popUpResult(result.id[0])")
		div(class="mediumImage") 
			image(ng-src='{{image(result.image[0])}}', width=279, height=185)
		div.mediumDetails
			div.details 
				div.topHalf 
					| Game Drive
				div.bottomHalf 
					div.location Cape Town
					div.price R{{price(result.price[0])}}			
div.resultPopUp(ng-visible="visible", ng-style="activityStyle")
	div {{activity.name[0]}}
div#resultBackground(ng-visible="visible", ng-click="popUpResult()")